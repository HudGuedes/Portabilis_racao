<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
    	<%= link_to('Home', root_path) %>
    </li>
    <li class="breadcrumb-item active" aria-current="page"><%= @product.title %></li>
  </ol>
</nav>
<h2>
	<%= @product.title %> <br/>
	<small>Codigo: <%= @product.id %></small>
</h2>
<hr/>
<div class="row">
	<div class="col-md-6">
		<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
		  <div class="carousel-inner">
		  	<% if @product.image_url.present? %>
			    <div class="carousel-item active">
		    		<img src="<%= @product.image_url %>" class="d-block w-100" alt="No image">
		    	</div>
		    <% else %>
		    	<div class="carousel-item active">
		    		<img src="https://thumbs.dreamstime.com/b/no-image-available-icon-vector-illustration-flat-design-140476186.jpg" class="d-block w-100" alt="No image">
		    	</div>
		    <% end %>
		  </div>
		  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
		    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
		    <span class="sr-only">Previous</span>
		  </a>
		  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
		    <span class="carousel-control-next-icon" aria-hidden="true"></span>
		    <span class="sr-only">Next</span>
		  </a>
		</div>
	</div>
	<div class="col-md-6">
		<h5>Preço: <%= price(@product.price) %></h5>
		<hr/>
		<h5>Descrição</h5>
		<p><%= simple_format(@product.description) %></p>
	</div>
</div>

